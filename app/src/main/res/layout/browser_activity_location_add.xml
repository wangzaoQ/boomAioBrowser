<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:paddingStart="13dp"
            app:srcCompat="@mipmap/ic_back"></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/app_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:text="@string/app_mange_location"
            android:textColor="@color/black"
            android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlTop"
        android:layout_marginTop="7dp"
        android:background="#FFF5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"></View>

    <com.boom.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srlEnableLoadMore="false"
        app:srlEnableOverScrollBounce="true"
        app:srlEnableOverScrollDrag="true"
        app:srlEnablePreviewInEditMode="true"
        app:srlEnableRefresh="false">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/app_text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_location_search_tips"
                    android:textColor="@color/black"
                    android:paddingHorizontal="13dp"
                    android:textSize="14sp"></androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSearch"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_search_city"
                    android:ellipsize="end"
                    android:hint="@string/app_search_city"
                    android:layout_marginHorizontal="13dp"
                    android:paddingStart="20dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#80000000"
                    android:textSize="14sp"></androidx.appcompat.widget.AppCompatTextView>


                <TextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/app_current_location"
                    android:textColor="#FF1C274C"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlTop"></TextView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="13dp"
                    android:background="@drawable/shape_search_bg_location"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/rlTop">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="7dp"
                        android:src="@mipmap/ic_location_tips"></ImageView>

                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="New Bedford,MA Newton, MA"></TextView>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivGo"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:visibility="invisible"
                        android:src="@mipmap/ic_location_start"
                        android:textColor="@color/white"
                        android:textSize="16sp"></androidx.appcompat.widget.AppCompatImageView>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:layout_marginHorizontal="13dp"
                    android:text="@string/app_city_follow_title"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llRoot"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFollow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    ></androidx.recyclerview.widget.RecyclerView>

                <TextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:layout_marginHorizontal="13dp"
                    android:singleLine="true"
                    android:text="@string/app_other_city_follow_title"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llRoot"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    ></androidx.recyclerview.widget.RecyclerView>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </com.boom.refresh.layout.SmartRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>