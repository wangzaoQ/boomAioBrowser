<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            app:srcCompat="@mipmap/ic_back"
            android:paddingStart="13dp"
            android:layout_centerVertical="true"
            ></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearch"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/shape_search_city"
            android:hint="@string/app_search_city"
            android:textColor="#000000"
            android:textColorHint="#80000000"
            android:imeOptions="actionSearch"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textSize="14sp"
            android:focusable="true"
            android:ellipsize="end"
            android:focusableInTouchMode="true"
            android:layout_toStartOf="@+id/llSearch"
            android:layout_marginEnd="13dp"
            android:paddingStart="20dp"
            ></androidx.appcompat.widget.AppCompatEditText>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF5F5F5"
        android:layout_below="@+id/etSearch"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        ></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_current_location"
        android:textSize="14sp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        android:layout_marginTop="27dp"
        android:textColor="#FF1C274C"
        style="@style/app_text_bold"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        ></TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        android:layout_marginTop="62dp"
        android:layout_marginHorizontal="13dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_search_bg_location"
        >
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/ic_location_tips"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            ></ImageView>
        <TextView
            android:id="@+id/tvArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="New Bedford,MA Newton, MA"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            ></TextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGo"
            android:layout_width="44dp"
            android:padding="12dp"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:layout_gravity="end|center_vertical"
            android:textSize="16sp"
            android:gravity="center"
            android:src="@mipmap/ic_location_start"
            ></androidx.appcompat.widget.AppCompatImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/tvCity"
        app:layout_constraintTop_toBottomOf="@+id/llRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_popular_city"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:layout_marginStart="13dp"
        android:textColor="#000000"
        android:layout_marginTop="21dp"
        android:textAllCaps="false"
        android:singleLine="true"
        android:gravity="center"
        style="@style/app_text_bold"
        android:paddingBottom="5dp"
        ></TextView>
    <com.boom.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srlEnableOverScrollBounce="true"
        app:srlEnableOverScrollDrag="true"
        app:srlEnablePreviewInEditMode="true"
        app:srlEnableRefresh="false"
        app:srlEnableLoadMore="false"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    </com.boom.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>