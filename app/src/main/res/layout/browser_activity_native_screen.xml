<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeADView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_screen_native">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="9.5dp">
        
        <FrameLayout
            android:id="@+id/flNative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="105dp"
            app:layout_constraintDimensionRatio="h,360:203"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/is_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFEEEEEE" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/shape_ad_tips2"
                android:gravity="center"
                android:text="AD"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flNative">

            <ImageView
                android:id="@+id/is_icon"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                tools:background="@mipmap/ic_start_logo" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/is_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    tools:text="amazon music" />

                <TextView
                    android:id="@+id/is_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:textColor="#99FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="podcasts now streaming !" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <TextView
            android:id="@+id/is_call"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/shape_bg_ad_install3"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="43dp"
            style="@style/app_text_bold"
            app:layout_constraintTop_toBottomOf="@+id/llMiddle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="install" />
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_native_close"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            ></androidx.appcompat.widget.AppCompatImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>