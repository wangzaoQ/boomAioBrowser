<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv"
            style="@style/app_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="45dp"
            android:text="@string/app_search"
            android:textColor="@color/black"
            android:textSize="29sp"></androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivVIP"
            android:layout_width="31dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/tv"
            android:layout_alignBottom="@+id/tv"
            app:srcCompat="@mipmap/ic_vip_1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:visibility="gone"
            ></androidx.appcompat.widget.AppCompatImageView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"></View>
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        android:id="@+id/rlSearch"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="44dp"
        android:layout_marginHorizontal="13.5dp"
        android:background="@drawable/shape_home_search"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSearchEngine"
                app:srcCompat="@mipmap/ic_search_gg"
                android:layout_width="34dp"
                android:layout_height="34dp"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatImageView
                app:srcCompat="@mipmap/ic_engine_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"></androidx.appcompat.widget.AppCompatImageView>
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPrivate"
            tools:visibility="visible"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:src="@mipmap/ic_private"
            android:visibility="gone"></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:text="@string/app_search_hint"
            android:textColor="#801C274C"></androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            app:srcCompat="@mipmap/ic_search"></androidx.appcompat.widget.AppCompatImageView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>