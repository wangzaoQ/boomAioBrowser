<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="13dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHome"
            android:layout_width="37dp"
            android:layout_height="37dp"
            app:srcCompat="@mipmap/ic_home"
            android:layout_marginEnd="7dp"
            ></androidx.appcompat.widget.AppCompatImageView>

        <com.boom.aiobrowser.ui.view.TopTitleView
            android:id="@+id/flTop"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_top_search"
            ></com.boom.aiobrowser.ui.view.TopTitleView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTabCount"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/shape_tab_bg"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="#B3000000"
            android:gravity="center"
            tools:text="5"
            style="@style/app_text_bold"
            android:layout_marginStart="7dp"
            ></androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClear"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="7dp"
            app:srcCompat="@mipmap/ic_web_clear"
            ></androidx.appcompat.widget.AppCompatImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0A000000"
        app:layout_constraintTop_toBottomOf="@+id/llTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        ></View>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/llTop"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDownload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_default_download_video"
                android:scaleType="centerInside"
                ></androidx.appcompat.widget.AppCompatImageView>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ivDownload2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="false"
                app:lottie_fileName="download.json"
                android:scaleType="fitXY"
                app:lottie_loop="true"
                android:visibility="gone"
                ></com.airbnb.lottie.LottieAnimationView>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDownload"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/shape_download_tips3"
            android:layout_gravity="end"
            android:elevation="3dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/white"
            tools:text="12"
            android:textSize="9sp"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLength="2"
            android:visibility="gone"
            ></androidx.appcompat.widget.AppCompatTextView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>