<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="45dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_back"
            android:paddingStart="13dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            ></androidx.appcompat.widget.AppCompatImageView>

        <RelativeLayout
            android:id="@+id/topTab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_13r_29000000"
            android:layout_marginHorizontal="46dp"
            android:layout_centerVertical="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvProgress"
                    style="@style/app_text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_tab_text_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/app_progress"
                    android:layout_margin="2.5dp"
                    android:textColor="@drawable/selector_tab_text2"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:id="@+id/tvDone"
                    style="@style/app_text_bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/app_done"
                    android:layout_margin="2.5dp"
                    android:background="@drawable/selector_tab_text_bg"
                    android:textColor="@drawable/selector_tab_text"
                    android:textSize="15sp"></TextView>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF5F5F5"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/flRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTop"
        ></FrameLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flRoot"
        />


</RelativeLayout>