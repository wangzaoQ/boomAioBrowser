<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:orientation="vertical">

    <com.boom.aiobrowser.ui.view.ScanItemView
        android:id="@+id/scanItem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlCacheTips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="13dp"
        android:background="@mipmap/bg_cache_permission">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:gravity="center_vertical"
            android:text="@string/app_cache_permission_tips"
            android:textColor="#FF007AFF"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:gravity="center_vertical"
            app:srcCompat="@mipmap/ic_clean_arrow"></androidx.appcompat.widget.AppCompatImageView>
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>