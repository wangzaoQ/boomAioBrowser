<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvCategory"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="7.5dp"
    android:layout_weight="1"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_gray_12r"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSource"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="5dp"
        ></androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSource"
        android:layout_width="match_parent"
        android:layout_weight="1"
        tools:text="133"
        android:gravity="center_vertical"
        android:layout_height="41dp"
        android:layout_marginStart="13dp"
        style="@style/app_text_normal"
        android:textColor="#0B132F"
        android:textSize="14sp"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSourceType"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@mipmap/ic_add_web_source"
        ></androidx.appcompat.widget.AppCompatImageView>
</androidx.appcompat.widget.LinearLayoutCompat>