<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_13r_white"
    android:layout_marginHorizontal="27dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="@string/app_copy_link_recognized"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShareText"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_video_more_item_bg"
        android:layout_marginHorizontal="14dp"
        android:textColor="#000000"
        android:textColorHint="#80000000"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:paddingHorizontal="10dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textSize="15sp"
        tools:text="video.mp4"
        android:gravity="center"
        ></androidx.appcompat.widget.AppCompatTextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEFEFEF"
        android:layout_marginTop="13dp"
        ></View>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="13dp"
        android:background="@drawable/shape_commit"
        android:textColor="@color/white"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:text="@string/app_open"
        ></androidx.appcompat.widget.AppCompatButton>
</androidx.appcompat.widget.LinearLayoutCompat>