<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlTabRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dp"
    android:orientation="vertical"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/ivTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,360:250"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/bg_sub_pop_top"></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_close_nf"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            ></androidx.appcompat.widget.AppCompatImageView>
        <View
            app:layout_constraintTop_toBottomOf="@+id/ivTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            ></View>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="33dp"
                app:srcCompat="@mipmap/ic_start_logo"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="38dp"
                android:drawableStart="@mipmap/ic_sub_tips"
                android:drawablePadding="6dp"
                android:text="@string/app_sub_pop_text1"
                android:textColor="@color/black"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:drawableStart="@mipmap/ic_sub_tips"
                android:drawablePadding="6dp"
                android:text="@string/app_sub_pop_text2"
                android:textColor="@color/black"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llSubWeekly"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_sub_pop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:text="1"
                    android:textColor="#2926D9"
                    android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/app_weekly"
                    android:textColor="#2926D9"
                    android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="$0.99/"
                    android:textColor="#2926D9"
                    android:textSize="15sp"></androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/app_text_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/app_weekly"
                    android:textColor="@color/color_blue_2926D9"
                    android:textSize="15sp"></androidx.appcompat.widget.AppCompatTextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llSubMonthly"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/selector_sub_pop"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llTop">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:text="1"
                android:textColor="#2926D9"
                android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/app_monthly"
                android:textColor="#2926D9"
                android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="$1.99/"
                android:textColor="#2926D9"
                android:textSize="15sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/app_monthly"
                android:textColor="#2926D9"
                android:textSize="15sp"></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTipsMonthly"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-7dp"
            android:background="@drawable/shape_sub_pop_tips"
            android:gravity="center"
            android:paddingHorizontal="7dp"
            android:text="$3.96/weekly 50%off"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/llSubMonthly"
            app:layout_constraintTop_toTopOf="@+id/llSubMonthly">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llSubQuarterly"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/selector_sub_pop"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llSubMonthly">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:text="1"
                android:textColor="#2926D9"
                android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/app_quarterly"
                android:textColor="#2926D9"
                android:textSize="13sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="$9.99/"
                android:textColor="#2926D9"
                android:textSize="15sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/app_text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/app_quarterly"
                android:textColor="#2926D9"
                android:textSize="15sp"></androidx.appcompat.widget.AppCompatTextView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTipsQuarterly"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-7dp"
            android:background="@drawable/shape_sub_pop_tips"
            android:gravity="center"
            android:paddingHorizontal="7dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/llSubQuarterly"
            app:layout_constraintTop_toTopOf="@+id/llSubQuarterly"
            tools:text="$3.96/weekly 50%off"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/app_restore_sub"
            android:textSize="13sp"
            android:textColor="#66000000"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llSubQuarterly"
            ></androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            style="@style/app_text_bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/shape_start_confirm"
            android:text="@string/app_subscribe_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/tvRestore"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="@string/app_sub_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirm"></androidx.appcompat.widget.AppCompatTextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>