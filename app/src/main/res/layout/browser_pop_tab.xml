<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlTabRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:layout_marginTop="70dp"
    android:background="@drawable/shape_10r_white">

    <RelativeLayout
        android:id="@+id/topTab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_13r_29000000"
        android:layout_marginHorizontal="13dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvNormal"
                style="@style/app_text_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_tab_text_bg"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/app_normal"
                android:layout_margin="2.5dp"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/tvPrivate"
                style="@style/app_text_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/app_private"
                android:layout_margin="2.5dp"
                android:background="@drawable/selector_tab_text_bg"
                android:textColor="@drawable/selector_tab_text"
                android:textSize="15sp"></TextView>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        ></androidx.recyclerview.widget.RecyclerView>
        <include
            android:id="@+id/emptyView"
            layout="@layout/browser_pivate_empty_view"
            android:visibility="gone"
            ></include>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F6F6F6"
        android:layout_marginTop="60dp"
        ></View>
    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:src="@mipmap/ic_add_tab"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="7dp"
        ></ImageView>

</androidx.appcompat.widget.LinearLayoutCompat>