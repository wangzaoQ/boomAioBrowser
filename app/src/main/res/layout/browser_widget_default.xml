<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_17r_white"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_widget_search_bg"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@mipmap/ic_start_logo"
            android:layout_marginStart="8dp"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_search_hint"
            android:textColor="#80000000"
            android:layout_marginHorizontal="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/newsRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >
        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="68dp"
            android:layout_height="51dp"
            android:scaleType="centerCrop"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="title"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                style="@style/app_text_bold"
                />
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Paul Pelosi attacker David DePape sentenced to life term on state charges"
                android:textColor="#80000000"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="0.9"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>