<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="26dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/shape_bg_item_files"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTag"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="7dp"
        android:layout_centerVertical="true"
        ></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/tvSize"
        android:layout_marginEnd="5dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="#80000000"
        android:layout_marginStart="47dp"
        android:layout_centerVertical="true"
        tools:text="Junk Files"
        ></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEnd"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="7dp"
        app:srcCompat="@mipmap/ic_scan_item_unchecked"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        ></androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ivEnd"
        android:layout_centerVertical="true"
        android:textColor="#FF007AFF"
        android:textSize="14sp"
        tools:text="41k"
        android:layout_marginEnd="6dp"
        android:textStyle="bold"
        ></androidx.appcompat.widget.AppCompatTextView>
</RelativeLayout>