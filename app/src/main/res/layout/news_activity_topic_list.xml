<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_back"
            android:paddingStart="13dp"
            android:layout_centerVertical="true"
            ></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearch"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_84r_white"
            android:textColor="#000000"
            android:textColorHint="#80000000"
            android:hint="@string/app_topics"
            android:imeOptions="actionSearch"
            android:selectAllOnFocus="true"
            android:paddingStart="17dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:focusable="true"
            android:ellipsize="end"
            android:focusableInTouchMode="true"
            android:layout_marginEnd="13.5dp"
            ></androidx.appcompat.widget.AppCompatEditText>


    </RelativeLayout>
    <View
        android:id="@+id/tempLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        android:layout_marginTop="6dp"
        ></View>
    <com.boom.refresh.layout.SmartRefreshLayout
        android:id="@+id/newsSmart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tempLine"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
    </com.boom.refresh.layout.SmartRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>