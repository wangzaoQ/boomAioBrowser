<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/app_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="16sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:text="@string/app_search_video"
            android:textSize="12sp"
            android:textColor="#80000000"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:background="@drawable/shape_nf_search"></TextView>

        <ImageView
            android:id="@+id/ivX"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_nf_x"></ImageView>

        <ImageView
            android:id="@+id/ivIns"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_nf_ins"></ImageView>

        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/ic_nf_download"></ImageView>
    </LinearLayout>
</LinearLayout>